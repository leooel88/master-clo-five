{
  "name": "hotel-reservation-api",
  "version": "1.0.0",
  "description": "API de réservation d'hôtel",
  "main": "index.js",
  "scripts": {
    "start": "npm run start:microservices & npm run start:api",
    "clean:dist": "rimraf dist",
    "start:api": "node dist/global-api/server.js",
    "start:microservices": "npm run start:hotel-service & npm run start:reservation-service & npm run start:room-service & npm run start:category-service",
    "start:hotel-service": "node dist/microservices/hotels/src/server.js",
    "start:reservation-service": "node dist/microservices/reservations/src/server.js",
    "start:room-service": "node dist/microservices/rooms/src/server.js",
    "start:category-service": "node dist/microservices/categories/src/server.js",
    "build": "tsc",
    "build:watch": "tsc -w",
    "db:sync": "ts-node dist/microservices/database/src/index.js"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "axios": "^1.3.4",
    "body-parser": "^1.19.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.6.3",
    "sequelize": "^6.12.1",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "jest": "^27.5.1"
  }
}